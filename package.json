{
  "name": "tamkeen-desktop",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:desktop": "tsc -p tsconfig.electron.json && concurrently -k \"vite\" \"wait-on http://localhost:3000 && node run-electron.js\"",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "build:desktop": "npm run build && electron-builder --win",
    "start:desktop": "npm run dev:desktop",
    "preview": "vite preview",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "@google/genai": "^1.40.0",
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "^2.95.3",
    "@types/uuid": "^10.0.0",
    "arabic-persian-reshaper": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lucide-react": "^0.562.0",
    "nanoid": "^5.1.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.71.1",
    "recharts": "^3.6.0",
    "sql.js": "^1.13.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.19.9",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^27.3.11",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.tamkeen.desktop",
    "productName": "Tamkeen Desktop",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Tamkeen Digital Journal",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": true,
      "runAfterFinish": true
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/",
        "to": "sql.js",
        "filter": [
          "sql-wasm.wasm"
        ]
      }
    ]
  }
}
